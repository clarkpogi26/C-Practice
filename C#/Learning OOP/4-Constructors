using System;
using C__starter;

namespace C__starter
{
    class Program
    {
        static void Main(string[] args)
        {
            Human human1 = new Human("Ricky", 65);
            Human human2 = new Human("Morty", 16);

            human1.eat();
            human1.sleep();

            human2.eat();
            human2.sleep();

            Console.ReadKey();
        }
    }
    class Human
    {
        public string name;
        public int age;

        public Human(String name, int age)
        {
            this.name = name;
            this.age = age;
        }
        public void eat()
        {
            Console.WriteLine($"{name} is eating");
        }
        public void sleep()
        {
            Console.WriteLine($"{name} is {age} years old");
        }
    }
}
