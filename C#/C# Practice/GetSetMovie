using System;
using System.Security.Cryptography.X509Certificates;

class Program
{
    static void Main(string[] args)
    {
        Movie movie1 = new Movie("The Avengers", "Joss Whedon", "PG-13");
        Movie movie2 = new Movie("Shrek", "Adam Adamson", "PG");

        Console.WriteLine(movie1.Rating);

        string changeRating = Console.ReadLine();
        movie1.Rating = changeRating;
        Console.WriteLine(movie1.Rating);
        Thread.Sleep(1000);
    }
    internal class Movie
    {
        public string title;
        public string director;
        private string rating;

        public Movie(string aTitle, string aDirector, string aRating)
        {
            title = aTitle;
            director = aDirector;
            Rating = aRating;
        }

        public string Rating
        {
            get { return rating; }
            set
            {
                string lowerValue = value.ToUpper();
                if (lowerValue == "G" || lowerValue == "PG" || lowerValue == "PG-13" || lowerValue == "R")
                {
                    rating = lowerValue;
                }
                else
                {
                    rating = "NR";
                }
            }
        }
    }
}