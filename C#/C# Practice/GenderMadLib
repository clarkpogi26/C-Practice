    // See https://aka.ms/new-console-template for more information
    using System.Data;
    bool isMale = false;
    int attempts = 0;
    while (true)
    {
        Console.Write("Are you a Male? Yes or No: ");
        string answer = (Console.ReadLine().ToLower());
        if (answer == "yes")
        {
            isMale = true;
            break;
        }
        else if (answer == "no")
        {
            isMale = false;
            break;
        }
        else
        {
            attempts++;
            int maxAttempts = (attempts - 1) % 3;
            switch (maxAttempts)
            {
                case 0:
                    Console.WriteLine("Please just answer with 'Yes or No;"); break;
                case 1:
                    Console.WriteLine("I said 'Yes or No'"); break;
                case 2:
                    Console.WriteLine("I SAID JUST YES OR NO!"); break;
            }
        }
    }
    // separator
    string result = isMale ? "You are a male" : "You are a female";
    if ((attempts == 3) && (attempts % 3 == 0))
    {
        Console.WriteLine("How hard is that to answer? " + result);
    } else
    {
        Console.WriteLine(result);
}